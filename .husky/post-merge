#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

IFS=$'\n'
# regex supports mono-repos with a package.json at root-level and at package-level
PACKAGE_LOCK_REGEX="/package.json|yarn.lock/g"
# extract all paths to yarn-lock.json files 
PACKAGES=("$(git diff --name-only HEAD@{1} HEAD | grep -E "$PACKAGE_LOCK_REGEX")")

if [[ ${PACKAGES[@]} ]]; then
  for package in $PACKAGES; do
    echo "ðŸ“¦ $package was changed. Running yarn install to update your dependencies..."
    DIR=$(dirname package)
    cd "$DIR" && yarn install
  done
fi